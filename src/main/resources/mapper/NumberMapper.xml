<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.mapper.NumberMapper">
    <resultMap id="NumberTbMap" type="NumberTb">
        <result column="id" property="id"/>
        <result column="type" property="type"/>
        <result column="doctor_id" property="doctorId"/>
        <result column="total" property="total"/>
        <result column="used" property="used"/>
    </resultMap>
    <select id="selectNumber" resultType="com.chen.entity.NumberTb" resultMap="NumberTbMap">
        select id,type,doctor_id,total,used from tb_number where type = #{name} and doctor_id = #{doctorId};
    </select>
    <update id="updateUse">
        update tb_number set used = used + 1 where type = #{name} and doctor_id = #{doctorId};
    </update>
</mapper>